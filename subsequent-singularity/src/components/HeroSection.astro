      <!-- Email Capture Form -->
      <form
        name="email-signup"
        method="POST"
        data-netlify="true"
        class="flex flex-col md:flex-row gap-4"
      >
        <input
          type="email"
          name="email"
          placeholder="Your Email"
          required
          class="p-3 flex-1 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"
        />
        <button
          type="submit"
          class="bg-green-500 text-white font-semibold p-3 rounded-lg hover:bg-green-600 transition"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
  